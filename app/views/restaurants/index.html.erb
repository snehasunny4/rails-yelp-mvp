<h1 class="mt-2">Welcome Foodie 🍜</h1>

<div class="card-body">
  <% @restaurants.each do |r| %>
    <ul class="card p-2 w-4"><%= link_to r.name, restaurant_path(r.id), class:"text-decoration-none" %></ul>
  <% end %>

<button type="button" class="btn btn-primary mt-2">
  <%= link_to "Add a new restaurant", new_restaurant_path, class:"text-light text-decoration-none"%>
</button>

</div>
